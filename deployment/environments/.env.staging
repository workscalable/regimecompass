# Gamma Adaptive System - Staging Environment Configuration

# Application
NODE_ENV=staging
PORT=3000
LOG_LEVEL=info

# Database
POSTGRES_DB=gamma_adaptive_staging
POSTGRES_USER=gamma_staging
POSTGRES_PASSWORD=${POSTGRES_PASSWORD_STAGING}
POSTGRES_PORT=5432
DATABASE_URL=postgresql://gamma_staging:${POSTGRES_PASSWORD_STAGING}@postgres:5432/gamma_adaptive_staging

# Redis
REDIS_PASSWORD=${REDIS_PASSWORD_STAGING}
REDIS_PORT=6379
REDIS_URL=redis://:${REDIS_PASSWORD_STAGING}@redis:6379

# API Keys (use staging/test keys)
POLYGON_API_KEY=${POLYGON_API_KEY_STAGING}
TWELVE_DATA_API_KEY=${TWELVE_DATA_API_KEY_STAGING}
TRADIER_API_KEY=${TRADIER_API_KEY_STAGING}
CBOE_API_KEY=${CBOE_API_KEY_STAGING}

# Security
JWT_SECRET=${JWT_SECRET_STAGING}
ENCRYPTION_KEY=${ENCRYPTION_KEY_STAGING}

# Monitoring
GRAFANA_PASSWORD=${GRAFANA_PASSWORD_STAGING}

# Feature Flags
PAPER_TRADING_ENABLED=true
LIVE_TRADING_ENABLED=false
DASHBOARD_ENABLED=true
API_ENABLED=true
MONITORING_ENABLED=true

# Staging-specific settings
RATE_LIMIT_ENABLED=true
CORS_ORIGIN=https://staging.gamma-adaptive.com
SSL_ENABLED=true