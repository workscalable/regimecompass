# Gamma Adaptive System - Production Environment Configuration

# Application
NODE_ENV=production
PORT=3000
LOG_LEVEL=warn

# Database
POSTGRES_DB=gamma_adaptive_prod
POSTGRES_USER=gamma_prod
POSTGRES_PASSWORD=${POSTGRES_PASSWORD_PROD}
POSTGRES_PORT=5432
DATABASE_URL=postgresql://gamma_prod:${POSTGRES_PASSWORD_PROD}@postgres:5432/gamma_adaptive_prod

# Redis
REDIS_PASSWORD=${REDIS_PASSWORD_PROD}
REDIS_PORT=6379
REDIS_URL=redis://:${REDIS_PASSWORD_PROD}@redis:6379

# API Keys (use production keys)
POLYGON_API_KEY=${POLYGON_API_KEY_PROD}
TWELVE_DATA_API_KEY=${TWELVE_DATA_API_KEY_PROD}
TRADIER_API_KEY=${TRADIER_API_KEY_PROD}
CBOE_API_KEY=${CBOE_API_KEY_PROD}

# Security
JWT_SECRET=${JWT_SECRET_PROD}
ENCRYPTION_KEY=${ENCRYPTION_KEY_PROD}

# Monitoring
GRAFANA_PASSWORD=${GRAFANA_PASSWORD_PROD}

# Feature Flags
PAPER_TRADING_ENABLED=true
LIVE_TRADING_ENABLED=${LIVE_TRADING_ENABLED_PROD:-false}
DASHBOARD_ENABLED=true
API_ENABLED=true
MONITORING_ENABLED=true

# Production-specific settings
RATE_LIMIT_ENABLED=true
CORS_ORIGIN=https://gamma-adaptive.com
SSL_ENABLED=true
SECURITY_HEADERS_ENABLED=true
AUDIT_LOGGING_ENABLED=true

# Performance settings
MAX_CONCURRENT_OPERATIONS=100
PROCESSING_TIMEOUT=30000
MEMORY_THRESHOLD=0.8
CPU_THRESHOLD=0.8

# Backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30