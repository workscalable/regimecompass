# Paper Trading System - Production Environment Configuration
# Copy this file and fill in your production values

# Database Configuration
DB_PASSWORD=your_secure_database_password_here
REDIS_PASSWORD=your_secure_redis_password_here

# API Keys (Required)
POLYGON_API_KEY=your_polygon_api_key_here
TRADIER_API_KEY=your_tradier_api_key_here

# Email Configuration (Optional but recommended for production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
ALERT_EMAIL_1=admin@yourcompany.com
ALERT_EMAIL_2=alerts@yourcompany.com

# Slack Integration (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Webhook Alerts (Optional)
ALERT_WEBHOOK_URL=https://your-webhook-endpoint.com/alerts
ALERT_WEBHOOK_TOKEN=your_webhook_auth_token

# Remote Logging (Optional)
LOG_ENDPOINT=https://your-logging-service.com/api/logs
LOG_API_KEY=your_logging_api_key

# Security (Recommended for production)
JWT_SECRET=your_jwt_secret_minimum_32_characters_long
ENCRYPTION_KEY=your_encryption_key_minimum_32_characters_long

# Monitoring
GRAFANA_PASSWORD=your_secure_grafana_password

# Application Settings
NODE_ENV=production
LOG_LEVEL=INFO
DEFAULT_ACCOUNT_BALANCE=100000
MAX_RISK_PER_TRADE=0.01

# SSL Configuration (if using custom certificates)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem