# RegimeCompass Environment Configuration
# Copy this file to .env and fill in your values

# Environment
NODE_ENV=development

# Database Configuration (PostgreSQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=regimecompass
POSTGRES_USER=regimecompass
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_SSL=false
POSTGRES_MAX_CONNECTIONS=20
POSTGRES_IDLE_TIMEOUT=30000
POSTGRES_CONNECTION_TIMEOUT=10000
POSTGRES_RETRY_ATTEMPTS=3
POSTGRES_RETRY_DELAY=1000

# Legacy Supabase (if migrating from Supabase)
# SUPABASE_URL=your_supabase_project_url
# SUPABASE_ANON_KEY=your_supabase_anon_key
# SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database Connection Settings
DB_CONNECTION_POOL_SIZE=10
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000

# Security
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
API_KEY=your_api_key_here

# Trading Configuration
DEFAULT_ACCOUNT_BALANCE=100000
MAX_RISK_PER_TRADE=0.02
MAX_PORTFOLIO_HEAT=0.20

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/regimecompass.log

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Alerts
ALERT_EMAIL=admin@regimecompass.com
ALERT_WEBHOOK_URL=your_webhook_url_here

# Market Data (if using external providers)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
POLYGON_API_KEY=your_polygon_key
IEX_CLOUD_API_KEY=your_iex_cloud_key